{
    "manifest_version": 3,
    "name": "Compact Countdown Timer",
    "version": "0.0.1",
    "description": "A simple and lightweight countdown timer that you can adjust on the fly.",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
