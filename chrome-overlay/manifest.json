{
    "manifest_version": 3,
    "name": "Compact Countdown Timer Overlay",
    "version": "0.0.3",
    "description": "A simple and lightweight countdown timer that you can adjust on the fly.",
    "permissions": [
        "storage",
        "commands"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-timer": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Toggle the on-page timer box"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "formatTime.js",
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
